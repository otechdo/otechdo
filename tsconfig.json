{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": [
    "src/core/**/*",
    "src/web/**/*",
    "src/desktop/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
